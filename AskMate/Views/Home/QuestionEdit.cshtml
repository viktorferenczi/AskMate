@model AskMate.Models.QuestionModel

@{
    ViewData["Title"] = "QuestionEdit";
}

<h4>Edit your question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="QuestionEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Title" name="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Text" placeholder="Your question goes here.." style="width:319%; min-height:370px" required>@Model.Text</textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:110px">
    <a asp-action="QuestionAsking">Add a question</a> | 
    <a asp-action="QuestionList">View questions</a> | 
