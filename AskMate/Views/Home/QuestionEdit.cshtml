@model AskMate.Domain.Question

@{
    ViewData["Title"] = "QuestionEdit";
}

<h1>QuestionEdit</h1>

<h4>Question:</h4>
@Model.Title
<br /> <br />
@Model.Text
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="QuestionEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" name="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" name="Text" class="form-control" value="@Model.Text" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QuestionAsking">Ask a question</a>
    <br />
    <a asp-action="QuestionList">View already asked questions</a>
    <br />
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
