@model AskMate.Domain.Question

@{
    ViewData["Title"] = "QuestionAsking";
}
<h4>Your Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Home/AskQuestion" method="post">    
            <div class="form-group">
                <label for="Title" class="control-label"></label>
                <input  name="Title" class="form-control" placeholder="Question title" required />
            </div>
            <div class="form-group">
                <label for="Text" class="control-label"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Text" placeholder="Your question goes here.." style="width:319%; min-height:370px" required></textarea>
            </div>
           <div class="form-group">
                <label for="Image" class="control-label"></label>
                <input for="Image" type="text" name="Image" class="form-control" placeholder="Optional: Insert image url" />
                <span for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

