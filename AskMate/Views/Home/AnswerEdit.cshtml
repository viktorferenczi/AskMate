@model AskMate.Models.AnswerModel

@{
    ViewData["Title"] = "AnswerEdit";
}

<h4>Edit your answer @Model.ID</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AnswerEdit" method="post">
            <div class="form-group">
                <input asp-for="Text" name="Text" class="form-control" value="@Model.Text" />
                <input type="hidden" name="aid" value="@Model.ID" />
                @*<input type="hidden" name="qid" value="@Model.Question.ID" />*@
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

