<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AskMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a asp-controller="Home" asp-action="Index"><img src="~/logo.png" width="75" height="80 "></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="margin-right:750px">
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Account" asp-area="" asp-action="Logout" style="margin-left:5px;">Logout</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Account" asp-area="" asp-action="Register" style="margin-left:5px;">Register</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Home" asp-area="" asp-action="Privacy" style="margin-left:5px; margin-right:300px">Privacy</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Home" asp-area="" asp-action="QuestionList" style="margin-left:5px">Questions</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Home" asp-area="" asp-action="QuestionAsking" style="margin-left:5px">Add question</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Home" asp-area="" asp-action="Index" style="margin-left:5px;">Home</a>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary" role="button" asp-controller="Profile" asp-area="" asp-action="Index" style="margin-left:5px;">Profile</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">

                @RenderBody()

            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - AskMate - All Rights Reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
        
</body>
</html>
